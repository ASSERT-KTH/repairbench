             for (final SimpleDslArg simpleDslArg : argsByName.values())
             {
                 final SimpleDslParam param = processor.collect(simpleDslArg);
                 if (param.hasValue())
                 {
                     valuesByName.put(param.getName().toLowerCase(), param.getValuesAsList());
                 }
             }
 
