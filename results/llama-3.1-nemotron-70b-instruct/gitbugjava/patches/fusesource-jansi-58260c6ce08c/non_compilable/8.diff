+
         if (k == -1) {
             target.append(input);
             return target;
         }
         j += BEGIN_TOKEN_LEN;
         String spec = input.substring(j, k);
 
         String[] items = spec.split(CODE_TEXT_SEPARATOR, 2);
         if (items.length == 1) {
             target.append(input);
             return target;
         }
         String replacement = render(items[1], items[0].split(CODE_LIST_SEPARATOR));
 
